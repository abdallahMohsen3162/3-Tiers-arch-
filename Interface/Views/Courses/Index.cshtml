@model IEnumerable<DataLayer.Entities.Course>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.State.ToString()</td> <!-- Display the enum value as a string -->
                <td>
                    <a href="@Url.Action("Edit", "Courses", new { id = course.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Courses", new { id = course.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
